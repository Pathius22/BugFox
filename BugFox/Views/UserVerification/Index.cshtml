@model BugFox.Models.User

<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100">
            @using (Html.BeginForm("Index", "UserVerification", FormMethod.Post))
            {
                <form class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <img src="~/Resources/BugFox.png" style="width: 70px" />
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Sign In
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" name="username" type="text" placeholder="Username" asp-for="Username">
                        <span class="focus-input100" data-placeholder="&#xf007;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" placeholder="Password" asp-for="Password">
                        <span class="focus-input100" data-placeholder="&#xf084;"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" asp-action="Index">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-90">
                        <a class="txt1" asp-action="Signup">
                            Don't have an account? Click here to Sign up!
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
@section Scripts{ 
<script type="text/javascript" src="~/js/userVerification.js"></script>
}
@model BugFox.Models.User

<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100">
            @using (Html.BeginForm("Signup", "UserVerification", FormMethod.Post))
            {
            <form class="login100-form validate-form">
                <span class="login100-form-logo">
                    <img src="~/Resources/BugFox.png" style="width: 70px" />
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Sign In
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" type="text" placeholder="Username" asp-for="Username">
                    <span class="focus-input100" data-placeholder="&#xf007;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" type="password" placeholder="Password">
                    <span class="focus-input100" data-placeholder="&#xf084;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" type="password" placeholder="Confirm Password" asp-for="Password">
                    <span class="focus-input100" data-placeholder="&#xf084;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="firstName">
                    <input class="input100" type="text" placeholder="First Name" asp-for="FirstName">
                    <span class="focus-input100" data-placeholder="&#xf007;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" type="text" placeholder="Last Name" asp-for="LastName">
                    <span class="focus-input100" data-placeholder="&#xf007;"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" asp-action="Index">
                        Register
                    </button>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt1" asp-action="Index">
                        Already have an account? Click here to Sign In!
                    </a>
                </div>
            </form>
            }
        </div>
    </div>
</div>

